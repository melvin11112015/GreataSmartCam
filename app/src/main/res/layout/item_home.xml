<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/video_img"
        android:layout_toRightOf="@+id/video_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/model_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="TextView"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/video_img"
        android:layout_alignTop="@+id/video_img"
        android:background="@android:color/holo_blue_light"
        android:elevation="1dp"
        android:text="TextView"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/video_img"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:onClick="videoimgOnClick"
        app:srcCompat="@android:color/background_dark" />

    <ImageView
        android:id="@+id/play_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/video_img"
        android:layout_alignStart="@+id/video_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:tint="@android:color/holo_orange_dark"
        app:srcCompat="@android:drawable/ic_media_play" />

</RelativeLayout>